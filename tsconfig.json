{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2020",
      "es7",
      "es6",
      "dom"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "__tests__", "dist"]
}
